{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "es5",
      "es6",
      "dom",
      "dom.iterable",
      "esnext",
      "es2016",
      "es2017",
      "es2018",
      "ES2020"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitThis": false,
    "strictNullChecks": true,
    "jsx": "react",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "downlevelIteration": true,
    "typeRoots": [
      "./node_modules/@types",
      "global.d.ts",
      "types"
    ]
  },
  "files": [
    "app/popup/index.tsx"
  ],
  "includes": [
    "./app/**/*.ts"
  ],
  "include": [
    "app",
    "types",
    "global.d.ts"
  ],
  "exclude": [
    "bin",
    "build",
    "node_modules"
  ],
  "compileOnSave": true
}
