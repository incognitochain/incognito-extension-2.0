{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "es6", "dom", "dom.iterable", "esnext", "es2016", "es2017"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "jsx": "react",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/*"]
    }
  },
  "files": ["app/popup/index.tsx"],
  "includes": ["./app/**/*.ts"],
  "include": ["app"],
  "exclude": ["bin", "build", "node_modules"],
  "compileOnSave": false
}
